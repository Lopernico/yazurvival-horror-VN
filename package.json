{
  "name": "survival-novel",
  "version": "1.0.0",
  "description": "Survival novel wrapped with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --windows --x64",
    "build": "npm run dist"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.yazumimoon.survivalnovel",
    "productName": "Yazumimoon - Survival Novel",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,license.md,LICENSE}"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-setup-${version}-${arch}.${ext}"
    }
  }
}
